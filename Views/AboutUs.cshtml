@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.AboutUs>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "Master.cshtml";
}

<!DOCTYPE HTML>

		<!-- Jumbotron, w title -->
		<div class="jumbotron text-center jumbotron-fluid">
			<div class="container">
				<h1>@Model.Value("aboutUsTitle")</h1>
				<p>Our Mission: 1st Choice Family Services supports people with developmental disabilities by
				    connecting them with expert direct support professionals who help them overcome challenges and live their best lives.</p>
			</div>
		</div>

		<!-- Main container -->

		<!-- Blogpost meta data -->
		<div class="container-fluid grey-bg">
			<div class="container">
				<div class="row section">
					<div class="col-md-6">
						<div class="meta-author media p-3">
							<img src="images/SofieToft.jpg" alt="Sofie Toft" class="mr-3 mt-2" style="width:60px;">
							<div class="media-body">
								<p>@Model.Value("aboutUsBodyText")</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>		

	